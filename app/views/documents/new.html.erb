<body class="bg-dark">
<%= form_with(model: @document, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', placeholder:'File name...' %>
  </div>

  <div class="form-group">
    <%= form.label :document %>
    <%= form.file_field :document, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :size %>
    <%= form.number_field :size, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Upload Document', class: 'btn btn-primary' %>
  </div>
<% end %>

</body>